<header class="navbar navbar-fixed-top navbar-dark navbar-custom">
  <div class="container-fluid">
    <ul>
        
        <%= link_to "blackjack", root_path, id: "logo" %>
        <%= link_to "by capstone", root_path, id: "smallerlogo" %>
    </ul>
    <nav class="navbar">
      <ul class="nav navbar-nav navbar-right">
        
        <li><%= link_to "Home", root_path, id: "heading" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, id: "heading" %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle", data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, id: "heading"  %></li>
             
              <li><%= link_to "Settings", edit_user_path(current_user), id: "heading"  %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete, id: "heading"  %>
              </li>    
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id: "heading" %></li>
        <% end %>
    </nav>
  </div>
</header>
